# TO configure Nginx to serve route /airbnb-onepage/ frm AirBnB_clone_v2.

server {
    # TO listen on port 80
    listen      80 default_server;
    listen      [::]:80 default_server ipv6only=on;

    # TO use server IP as a domain name
    server_name 54.162.236.227;

    # TO customize the HTTP response header
    add_header  X-Served-By 375-web-01;

    # TO serve /airbnb-onepage/ route frm AirBnB_clone_v2
    location = /airbnb-onepage/ {
        proxy_pass http://127.0.0.1:5000/airbnb-onepage/;
    }

    # error 404 page
    error_page 404 /404.html;
    location /404 {
        root /var/www/html;
        internal;
    }
}
